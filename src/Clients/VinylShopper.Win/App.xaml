<Application
    x:Class="VinylShopper.Win.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VinylShopper.Win"
    xmlns:localData="using:VinylShopper.Win.Data">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <!-- 
                    Styles that define common aspects of the platform look and feel
                    Required by Visual Studio project and item templates
                 -->
                <ResourceDictionary Source="Common/StandardStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        	<SolidColorBrush x:Key="AppDarkRed" Color="#FF150000"/>
        	<SolidColorBrush x:Key="AppRed" Color="#E5BE0000"/>

            <!-- Application-specific resources -->

            <x:String x:Key="AppName">VinylShopper.Win</x:String>
            <local:LocalizedStrings x:Key="LocalizedStrings"/>
        </ResourceDictionary>

    </Application.Resources>
</Application>
